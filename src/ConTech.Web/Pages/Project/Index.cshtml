@{
    ViewData["Title"] = "Items";
}

<div class="container">
    <h2 class="mb-4">Projects List</h2>
    
    <!-- Create New Button -->
    <div class="mb-4">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <!-- Card Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var project in Model.ProjectList)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">@project.Description</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-page="./Update" asp-route-id="@project.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-page="./Delete" asp-route-id="@project.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a asp-page="../View/Index" asp-route-projectId="@project.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-eye"></i> View List
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
