@page "{id:int}"
@model ConTech.Web.Pages.View.UpdateModel
@{
    ViewData["Title"] = "Edit Item";
}

<h2>Edit Item</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="View.Id" />
    <input type="hidden" asp-for="View.ProjectId" />
    <div class="row simple-input-form min-vh-60">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="View.Name"></label>
                <input asp-for="View.Name" class="form-control" />
                <span asp-validation-for="View.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="View.Description"></label>
                <textarea asp-for="View.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="View.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-group mb-3">
                    <label asp-for="View.PdfFile" class="form-label"></label>
                    <input asp-for="View.PdfFile" class="form-control" type="file" accept=".pdf" />
                    <span asp-validation-for="View.PdfFile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

